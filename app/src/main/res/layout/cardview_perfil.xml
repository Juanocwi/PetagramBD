<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >
    <LinearLayout
        android:id="@+id/vl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/top"
        >
        <ImageView
            android:id="@+id/ivFotoP"
            android:layout_width="@dimen/image_sizep"
            android:layout_height="@dimen/image_sizep"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_m1"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:id="@+id/llp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tvPLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likes_doodle"
                android:textSize="@dimen/nombre"
                android:layout_marginLeft="@dimen/left"
                />
            <ImageView
                android:id="@+id/ivTLikeP"
                android:layout_width="@dimen/like_size"
                android:layout_height="@dimen/like_size"
                android:src="@drawable/ic_bone1"
                android:layout_marginLeft="@dimen/left"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>