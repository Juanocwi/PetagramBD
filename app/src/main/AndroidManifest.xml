<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.espeletia.petagrams3">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_huella"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_huella"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".menuopciones.acerca_de"
            android:parentActivityName=".actividades.MainActivity" />
        <activity android:name=".menuopciones.contacto"
            android:parentActivityName=".actividades.MainActivity" />
        <activity android:name=".actividades.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actividades.Favoritas"
            android:parentActivityName=".actividades.MainActivity" />
    </application>

</manifest>